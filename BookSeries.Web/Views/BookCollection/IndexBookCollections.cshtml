@model IEnumerable<BookSeries.Domain.Entities.BookCollection>


<div class="card-body p-4">
    <div class="table-responsive shadow rounded border border-4">
        <table class="table table-hover table-bordered mb-0">
            <thead class="bg-light">
                <tr>
                    <th colspan="4" class="text-center py-2">
                        <div class="container">
                            <div class="row align-items-center">
                                <div class="col-md-4 text-start">
                                    <a asp-action="CreateBookCollection" class="btn btn-outline-primary">
                                        <i class="bi bi-plus-square"></i> Create New Collection
                                    </a>
                                </div>
                                <div class="col-md-4 text-center text-dark">
                                    <h5 class="m-0">Book Collections</h5>
                                </div>
                                <div class="col-md-4">
                                </div>
                            </div>
                        </div>
                    </th>
                </tr>
                <tr class="text-dark">
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">Created Date</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var collection in Model)
                    {
                        <tr>
                            <td>@collection.Title</td>
                            <td>@collection.Description</td>
                            <td>@collection.CreatedDate</td>
                            <td>
                                <a class="btn btn-sm btn-outline-primary" asp-action="EditBookCollection" asp-route-id="@collection.Id" title="EditBookCollection" aria-label="EditBookCollection @collection.Title">
                                    <i class="bi bi-pencil"></i>
                                </a>

                                <a class="btn btn-sm btn-outline-danger" asp-action="DeleteBookCollection" asp-route-id="@collection.Id" title="DeleteBookCollection" aria-label="EditBookCollection @collection.Title">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center">
                            No collections available. <a asp-action="CreateBookCollection">Create one now!</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>