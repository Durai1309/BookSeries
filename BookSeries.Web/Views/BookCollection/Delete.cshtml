@model BookSeries.Domain.Entities.BookCollection

@{
    ViewData["Title"] = "Delete Book Collection";
}

<h1>Are you sure you want to delete this collection?</h1>

<div>
    <p><strong>Title:</strong> @Model.Title</p>
    <p><strong>Description:</strong> @Model.Description</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "BookCollection")" class="btn btn-secondary">Cancel</a>
</form>