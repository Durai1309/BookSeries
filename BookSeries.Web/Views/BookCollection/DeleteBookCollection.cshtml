@model BookSeries.Domain.Entities.BookCollection

<form asp-action="DeleteConfirmed" method="post">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 col-12">
                <div class="card shadow-lg border-light">
                    <div class="card-header bg-danger text-white text-center">
                        <h5 class="m-0" style="font-size: 1.5rem;">Delete Book Collection</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <input type="hidden" asp-for="Id" />

                            <div class="col-12 mb-4">
                                <label for="Title" class="form-label h6">Title</label>
                                <input asp-for="Title" id="Title" class="form-control form-control-lg" disabled />
                            </div>

                            <div class="col-12 mb-4">
                                <label for="Description" class="form-label h6">Description</label>
                                <textarea asp-for="Description" id="Description" class="form-control form-control-lg" rows="4" disabled></textarea>
                            </div>

                            <div class="col-12 d-flex justify-content-between mt-4">
                                <a href="@Url.Action("IndexBookCollections", "BookCollection")" class="btn btn-outline-primary btn-md">Back to List</a>
                                <button type="submit" class="btn btn-outline-danger btn-md">Delete Collection</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
