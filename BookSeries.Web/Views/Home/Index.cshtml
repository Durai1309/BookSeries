@model IEnumerable<BookSeries.Domain.Entities.Book>

<form>
    <div class="container row">
        @foreach (var book in Model)
        {
            <div class="col-12 col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-lg rounded-lg">
                    <div class="card-header bg-primary text-white text-center rounded-top">
                        <h3 class="card-title mb-0">@book.Title</h3>
                    </div>
                    <img src="@book.ImageUrl" class="card-img-top" alt="@book.Title" style="height: 250px; object-fit: cover; border-top-left-radius: 10px; border-top-right-radius: 10px;">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="text-dark fs-5">@string.Format("{0:c}", book.Price)</span>
                        </div>
                        <p class="card-text flex-grow-1 text-muted" style="font-size: 0.875rem; line-height: 1.5;">@Html.Raw(book.Description)</p>
                    </div>
                    <div class="mt-auto">
                        <a asp-action="Detail" asp-controller="Order" asp-route-bookId="@book.Id"
                           class="btn btn-primary btn-lg w-100 py-2 rounded-0">Buy Now</a>
                    </div>
                </div>
            </div>
        }
    </div>
</form>

<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
    }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
            transform: scale(1.05);
        }

    .card-header {
        padding: 20px;
        background-color: #007bff;
    }

    .card-body {
        padding: 20px;
    }

    .card-text {
        color: #6c757d;
    }

    .fs-5 {
        font-size: 1.25rem;
    }

    .text-muted {
        color: #6c757d !important;
    }
</style>
