@model IEnumerable<BookSeries.Domain.Entities.Book>

@foreach (var group in Model.GroupBy(b => b.BookSeriesId))
{
    <div class="mb-5">
        <div class="text-center mb-4">
            <h3>Book Series ID: @group.Key</h3>
        </div>

        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var book in group)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        <img src="@book.ImageUrl" class="card-img-top" alt="@book.Title">
                        <div class="card-body">
                            <h5 class="card-title">@book.Title</h5>
                            <p class="card-text"><strong>Author:</strong> @book.Author</p>
                            <p class="card-text"><strong>Order:</strong> @book.Order</p>
                            <p class="card-text"><strong>Description:</strong> @book.Description</p>
                            <p class="card-text"><strong>Price:</strong> @book.Price.ToString("c")</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}
