@model BookSeries.Domain.Entities.Book

@{
    ViewData["Title"] = "Book Details";
}

<h1>@Model.Title</h1>

<div>
    <p><strong>Author:</strong> @Model.Author</p>
    <p><strong>Series:</strong> @Model.BookSeries?.Title</p>
    <p><strong>Order:</strong> @Model.Order</p>
</div>

<a href="@Url.Action("Edit", "Book", new { id = Model.Id })" class="btn btn-warning">Edit</a>
<a href="@Url.Action("Index", "Book")" class="btn btn-secondary">Back to List</a>
