@model IEnumerable<BookSeries.Domain.Entities.Book>


<div class="card-body p-4">
    <div class="table-responsive shadow rounded border border-4">
        <table class="table table-hover table-bordered mb-0">
            <thead class="bg-light">
                <tr>
                    <th colspan="7" class="text-center py-2">
                        <div class="container">
                            <div class="row align-items-center">
                                <div class="col-md-4 text-start">
                                    <a href="@Url.Action("CreateBook", "Book")" class="btn btn-outline-primary">
                                        <i class="bi bi-plus-square"></i> Create New Book
                                    </a>
                                </div>
                                <div class="col-md-4 text-center text-dark">
                                    <h5 class="m-0">Books List</h5>
                                </div>
                                <div class="col-md-4">
                                </div>
                            </div>
                        </div>
                    </th>
                </tr>
                <tr class="text-dark">
                    <th scope="col">Title</th>
                    <th scope="col">Author</th>
                    <th scope="col">Order</th>
                    <th scope="col">Price</th>
                    <th scope="col">Description</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var book in Model)
                    {
                        <tr>
                            <td>@book.Title</td>
                            <td>@book.Author</td>
                            <td>@book.Order</td>
                            <td>@book.Price.ToString("c")</td>
                            <td>@book.Description</td>
                            <td>
                                <a href="@Url.Action("EditBook", "Book", new { id = book.Id })" class="btn btn-sm btn-outline-primary" title="Edit @book.Title">
                                    <i class="bi bi-pencil"></i>
                                </a>

                                <a href="@Url.Action("DeleteBook", "Book", new { id = book.Id })" class="btn btn-sm btn-outline-danger" title="Delete @book.Title">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center">
                            No books available. <a href="@Url.Action("CreateBook", "Book")">Create one now!</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


