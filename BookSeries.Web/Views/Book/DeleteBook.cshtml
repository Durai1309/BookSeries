@model BookSeries.Domain.Entities.Book

@{
    ViewData["Title"] = "Delete Book";
}

<h1>Are you sure you want to delete this book?</h1>

<div>
    <p><strong>Title:</strong> @Model.Title</p>
    <p><strong>Author:</strong> @Model.Author</p>
    <p><strong>Series:</strong> @Model.BookSeries?.Title</p>
    <p><strong>Order:</strong> @Model.Order</p>
    <p><strong>Price:</strong> @Model.Price</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Image URL:</strong> @Model.ImageUrl</p>
    <p><strong>Image Local Path:</strong> @Model.ImageLocalPath</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("BookIndex", "Book")" class="btn btn-secondary">Cancel</a>
</form>



