<div class="container mt-5">
    <div class="card shadow-lg border">
        <div class="card-header bg-primary text-white py-3 rounded-top">
            <div class="row align-items-center">
                <div class="col-6">
                    <h4 class="mb-0">Order List</h4>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="mt-4">
                <table class="table table-bordered table-striped pt-3" style="width:100%">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Email</th>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>@order.Email</td>
                                <td>@order.Name</td>
                                <td>@order.Phone</td>
                                <td>@order.Status</td>
                                <td>
                                    <a href="@Url.Action("OrderDetail", "Order", new { orderId = order.Id })" class="btn btn-outline-primary btn-sm">
                                        View Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
